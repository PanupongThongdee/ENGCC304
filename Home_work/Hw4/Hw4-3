#include <stdio.h>

int a =0 ;
int b =0 ;
int c =0 ;

int sum ;
int sum_del;


int main()
{

  printf("ENTER 3 Numbers \n");
  scanf(" %d " , &a );
  scanf(" %d " , &b );
  scanf(" %d " , &c );
  printf("%s,\n", "----------------------");
  sum = a+b+c ;
  sum_del = a-b-c;
  
  printf(" Plus =  %d,\n" , sum);
  printf("  difference  =  %d" , sum_del);

  return 0 ;
}